<div data-options="dxView : { name: 'ResultsGallery' } ">    
    <div class="gallery" data-bind="dxGallery: { dataSource: dataSource, height: '100%', width: '100%', showIndicator: false, selectedIndex: selectedItemIndex }">
        <div class="gallery-item" data-options="dxTemplate: { name: 'item' }">
            <div class="gallery-container">
                <p class="gallery-text"><span data-bind="text: $parent.selectedItemIndex"></span> of <span data-bind="text: $parent.listCount"></span> found films</p>
                <div data-bind="dxAction: $parent.resultsItemClick, style: { backgroundImage: 'url(' + Images()[0] + ')' }" class="image-container">
                    <div class="fav">
                        <div class="fav-img" data-bind=" css: { 'selected': true }"></div>
                    </div>
                </div>
                <div class="description">
                    <div class="price"><span data-bind="text: OriginalniNaslov"></span></div>
                    <div class="place">
                        <span data-bind="text: HrvatskiNaslov"></span>,
                        <span data-bind="text: EngleskiNaslov"></span>,
                    </div>

                    <div class="place">
                        <span style="color: #3cbc8a">HR | Å kotska | 150min </span>
                    </div>
                    <div class="place">
                        <span data-bind="text: Redatelj"></span>
                    </div>
                    <div class="place" style="padding-top:0.5em;">
                        <ul class="zanr-lista">
                            <li class="zanr-element">Drama</li>
                            <li class="zanr-element">Triler</li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>